{
  "name": "@cuzy/fizz",
  "version": "0.1.0",
  "description": "High-performance Bun WebSocket server implementing the Pusher protocol",
  "keywords": [
    "websocket",
    "realtime",
    "bun",
    "websockets",
    "real-time",
    "fizz",
    "pusher-protocol"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Tom",
      "email": "tom@example.com"
    }
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./src/*": "./src/*"
  },
  "bin": {
    "fizz": "./dist/cli.js"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "dev": "bun run --watch src/cli.ts",
    "build": "bun build src/cli.ts --outdir=dist --target=bun --format=esm && bun build src/index.ts --outdir=dist --target=bun --format=esm && tsc --project tsconfig.build.json",
    "start": "bun run dist/cli.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ansi-escapes": "^7.2.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "ioredis": "^5.8.2",
    "marked": "^17.0.0",
    "wrap-ansi": "^9.0.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "bun-types": "^1.3.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.2"
  }
}
