{
  "name": "cuzy-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --watch packages/fizz/src/cli.ts",
    "build": "bun run --cwd packages/fizz build && bun run --cwd packages/sip build",
    "start": "bun run packages/fizz/dist/cli.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit && bun run --cwd packages/fizz typecheck && bun run --cwd apps/demo typecheck && bun run --cwd packages/sip typecheck",
    "clean": "rm -rf packages/fizz/dist packages/sip/dist",
    "prepare": "husky",
    "postinstall": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@google/gemini-cli": "^0.16.0",
    "@types/bun": "^1.3.2",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.2"
  }
}
